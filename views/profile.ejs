<!-- views/profile.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="icon" href="/images/logoForMeal.png">
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&family=Pacifico&display=swap" rel="stylesheet">
  <!-- Icon Font Stylesheet -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
  <!-- Bootstrap and Custom Styles -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/profile.css">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body class="d-flex flex-column h-100">
  <!-- Navigation Bar -->
  <nav class="navbar top navbar-expand-lg navbar-dark bg-dark px-4 px-lg-5 py-3 py-lg-0">
    <a href="/" class="navbar-brand p-0">
      <h1 class="text-primary m-0"><i class="fa fa-utensils me-3"></i>NammaTaajaUpahaara</h1>
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
      <span class="fa fa-bars"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
      <div class="navbar-nav ms-auto py-0 pe-4">
        <a href="/" class="nav-item nav-link">Home</a>
        <a href="/about" class="nav-item nav-link">About</a>
        <a href="/profile" class="nav-item nav-link active">Profile</a>
        <a href="/client" class="nav-item nav-link">Your Orders</a>
        <a href="/contact" class="nav-item nav-link">Contact</a>
      </div>
      <a href="/items" class="btn btn-primary py-2 px-4">Order Now</a>
    </div>
  </nav>

  <!-- Profile Form -->
  <div class="container form-signin mt-5 localbyme">
    <h2 class="mt-4 mb-3 fw-normal text-bold text-center">
      <i class="far fa-user-circle me-2"></i>My Profile
    </h2>
    <!-- Flash Messages -->
    <% if (messages.error) { %>
      <div class="alert alert-danger" role="alert">
        <%= messages.error %>
      </div>
    <% } %>
    <% if (messages.success) { %>
      <div class="alert alert-success" role="alert">
        <%= messages.success %>
      </div>
    <% } %>
    <form method="POST" action="/profile/<%= user.username %>" class="form-floating">
      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="firstname" placeholder="First Name" name="firstname" value="<%= user.firstname %>" required>
        <label for="firstname">First Name</label>
      </div>
      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="lastname" placeholder="Last Name" name="lastname" value="<%= user.lastname %>" required>
        <label for="lastname">Last Name</label>
      </div>
      <div class="form-floating mb-3">
        <input type="email" class="form-control" id="email" placeholder="E-mail" name="email" value="<%= user.email %>" disabled required>
        <label for="email">E-mail</label>
      </div>
      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="phone" placeholder="Phone" name="phone" value="<%= user.phone %>" required>
        <label for="phone">Phone No.</label>
      </div>
      <div class="profile-btn">
        <button class="w-100 profile-btn btn btn-success mb-3" type="submit">Update Profile</button>
      </div>
    </form>
    <form action="/logout" method="get">
      <div class="form-floating">
        <button class="w-100 btn btn-danger mb-3" type="submit">Log Out</button>
      </div>
    </form>
    <p>Note: Tap on the field to change it</p>
  </div>

  <!-- Bootstrap JS (for navbar toggle) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>