  <script src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.39.0/js/tempusdominus-bootstrap-4.min.js"></script>
  <!-- Search Bar Filtering Script -->
  <script>
    document.getElementById('searchInput').addEventListener('input', function(e) {
      const searchInput = e.target;
      const searchText = searchInput.value.toLowerCase().trim();
      const itemCards = document.querySelectorAll('.item-card');
      const feedback = document.getElementById('searchFeedback');

      let totalMatches = 0;

      itemCards.forEach(card => {
        const itemName = card.getAttribute('data-name');
        const parentContainer = card.parentElement;
        const isVisibleDueToCategory = parentContainer.style.display !== 'none';
        const isMatch = itemName.includes(searchText);

        if (isMatch && isVisibleDueToCategory) {
          parentContainer.style.display = 'block';
          totalMatches++;
        } else {
          parentContainer.style.display = 'none';
        }
      });

      if (searchText === '') {
        itemCards.forEach(card => {
          const parentContainer = card.parentElement;
          const categoryFilter = document.getElementById('categoryFilter').value;
          const itemCategory = parentContainer.getAttribute('data-category');
          if (categoryFilter === 'all' || categoryFilter === itemCategory) {
            parentContainer.style.display = 'block';
          }
        });
        feedback.style.display = 'none';
      } else if (totalMatches === 0) {
        feedback.style.display = 'block';
        feedback.textContent = 'No items found.';
      } else {
        feedback.style.display = 'none';
      }

      setTimeout(() => {
        searchInput.focus();
      }, 0);
    });
  </script>
  <!-- Category Filter Script -->
  <script>
    document.getElementById('categoryFilter').addEventListener('change', function(e) {
      const selectedCategory = e.target.value;
      const itemContainers = document.querySelectorAll('.item-card-container');
      const searchInput = document.getElementById('searchInput');
      const feedback = document.getElementById('searchFeedback');

      itemContainers.forEach(container => {
        const itemCategory = container.getAttribute('data-category');
        if (selectedCategory === 'all' || selectedCategory === itemCategory) {
          container.style.display = 'block';
        } else {
          container.style.display = 'none';
        }
      });

      // Reset search input and feedback when changing category
      searchInput.value = '';
      feedback.style.display = 'none';

      // Reapply search filter if there's a search term
      if (searchInput.value) {
        searchInput.dispatchEvent(new Event('input'));
      }
    });
  </script>
  <!-- Cart Interaction Script -->
  <script>
    document.querySelectorAll('.add-to-cart').forEach(button => {
      button.addEventListener('click', function() {
        const itemId = this.getAttribute('data-item-id');
        console.log("Sending itemId to /cart/add:", itemId); // Debug log
        if (!itemId) {
          console.error("Item ID is missing for this button");
          alert("Cannot add to cart: Item ID is missing.");
          return;
        }
        fetch('/cart/add', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ itemId })
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            updateCartDisplay(data.cart);
            alert('Item added to cart!');
          } else {
            alert(data.message);
          }
        })
        .catch(err => {
          console.error(err);
          alert('Failed to add to cart.');
        });
      });
    });

    document.addEventListener('click', function(e) {
      if (e.target.classList.contains('increase-quantity') || e.target.classList.contains('decrease-quantity')) {
        const cartItem = e.target.closest('.cart-item');
        const itemId = cartItem.getAttribute('data-item-id');
        const quantityElement = cartItem.querySelector('.quantity');
        let quantity = parseInt(quantityElement.textContent);
        
        if (e.target.classList.contains('increase-quantity')) {
          quantity += 1;
        } else if (e.target.classList.contains('decrease-quantity')) {
          quantity -= 1;
        }

        fetch('/cart/update', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ itemId, quantity })
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            updateCartDisplay(data.cart);
          } else {
            alert(data.message);
          }
        })
        .catch(err => {
          console.error(err);
          alert('Failed to update cart.');
        });
      }
    });

    document.addEventListener('click', function(e) {
      if (e.target.classList.contains('remove-from-cart')) {
        const cartItem = e.target.closest('.cart-item');
        const itemId = cartItem.getAttribute('data-item-id');

        fetch('/cart/remove', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ itemId })
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            updateCartDisplay(data.cart);
          } else {
            alert(data.message);
          }
        })
        .catch(err => {
          console.error(err);
          alert('Failed to remove from cart.');
        });
      }
    });

    function updateCartDisplay(cart) {
      const cartItemsContainer = document.getElementById('cart-items');
      const grandTotalContainer = cartItemsContainer.nextElementSibling;

      if (cart.length === 0) {
        cartItemsContainer.innerHTML = '<p>Your cart is empty.</p>';
        if (grandTotalContainer) grandTotalContainer.remove();
      } else {
        cartItemsContainer.innerHTML = cart.map(item => `
          <div class="cart-item" data-item-id="${item.itemId}">
            <div>
              <h5>${item.name}</h5>
              <p>Price: ₹${item.price}</p>
            </div>
            <div class="quantity-controls">
              <button class="btn btn-secondary decrease-quantity">-</button>
              <span class="quantity">${item.quantity}</span>
              <button class="btn btn-secondary increase-quantity">+</button>
            </div>
            <div>
              <p>Total: ₹${item.price * item.quantity}</p>
              <button class="btn btn-danger remove-from-cart">Remove</button>
            </div>
          </div>
        `).join('');

        if (grandTotalContainer) {
          grandTotalContainer.innerHTML = `
            <h4>Grand Total: ₹${cart.reduce((total, item) => total + (item.price * item.quantity), 0)}</h4>
            <a href="/cart" class="btn btn-primary mt-3">Proceed to Checkout</a>
          `;
        } else {
          const grandTotalDiv = document.createElement('div');
          grandTotalDiv.className = 'mt-4';
          grandTotalDiv.innerHTML = `
            <h4>Grand Total: ₹${cart.reduce((total, item) => total + (item.price * item.quantity), 0)}</h4>
            <a href="/cart" class="btn btn-primary mt-3">Proceed to Checkout</a>
          `;
          cartItemsContainer.parentElement.appendChild(grandTotalDiv);
        }
      }
    }
  </script>
</body>
