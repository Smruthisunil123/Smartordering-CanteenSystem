        <!-- <a href="/items" class="btn btn-primary py-2 px-4">Order Now</a> -->
      </div>
    </div>
      </nav>
    <div class="color px-4">
    <div class="header px-4">
    <h1>All Orders</h1>
    <div class="container">
        <div class="row">
        <div class="col-sm">
            Order Id
          </div>
        <div class="col-sm">
            User Name
          </div>
          <div class="col-sm">
            Item
          </div>
          <div class="col-sm">
            Quantity
          </div>
          <div class="col-sm">
            Order Status
          </div>
          <div class="col-sm">
            Payment Status
          </div>
          <div class="col-sm">
            Action
          </div>
          </div>
          <hr>
     <% for(i=data.length-1; i>=0; i--){ %>

        <div class="row">
          <div class="col-sm">
            <p><%= data[i]._id %></p>
          </div>
          <div class="col-sm">
            <p><%= data[i].userName %></p>
          </div>
          <div class="col-sm">
            <% for(let j=0; j< data[i].allItems.length ; j++){ %>
            <p><%= data[i].allItems[j].t %>
            <%}%>
            </p>
        </div>
          <div class="col-sm">
            <% for(let j=0; j< data[i].allItems.length ; j++){ %>
            <p><%= data[i].allItems[j].q %>
            <%}%>
            </p>
        </div>
          <div class="col-sm">
            <p><%= data[i].orderStatus %></p>
          </div>
          <div class="col-sm">
            <p><%= data[i].paymentStatus %></p>
          </div>
          <div class="col-sm">
            <form action="/admin/orders/<%= data[i]._id %>/accept" method="post">
              <button type="submit">Accept</button>
            </form>
            <!-- <a href="">Cancel</a> -->
          </div>
        </div>
        <% } %>
      </div>
      
    <!-- <p><%= data[0] %></p>  -->
  </div>
