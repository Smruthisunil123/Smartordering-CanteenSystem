<body class="d-flex flex-column h-100">
    <div class="container form-signin mt-5 localbyme">
        
        <form method="POST" action="/signup" class="form-floating">
            <h2 class="mt-4 mb-4 fw-normal text-bold text-center"><i class="bi bi-pencil-square me-2"></i>Sign up</h2>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="firstname" placeholder="First Name" name="firstname" value="yash" required="">
                <label for="firstname">First Name</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="lastName" placeholder="Last Name" value="patel" name="lastname" required="">
                <label for="lastname">Last Name</label>
            </div>

            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="email" placeholder="E-mail" name="username" value="" required="">
                <label for="email">E-mail ( will be used as username )</label>
            </div>

            <div class="form-floating mb-3">
              <input type="phone" class="form-control" id="phone" placeholder="Phone" name="phone" value="" required="">
              <label for="phone">Phone No.</label>
          </div>

            <div class="form-floating mb-3">
              <input type="password" class="form-control" id="password" placeholder="Password" name="password" value="" required="">
              <label for="password"> Password</label>
          </div>
            
            <button class="w-100 btn btn-success mb-3" type="submit"> SIGN UP</button>
        </form>
        <form action="/login" method="get">
            <button class="w-100 btn btn-secondary mb-3" name="upd_confirm" type="submit">Already have account? Login here</button>
          </form>
    </div>
</body>
