<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- HEADER PART FOR EVERY PAGE -->
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Admin Inventary</title>
        <link rel="stylesheet" href="/css/itemsOnDate.css">
    </head>

    <body class="d-flex flex-column h-100">
        
        <div class="container text-white p-4 mainBox1">
            <h2 class="mt-4">Modify Inventary On Specific Date</h2>
            <form action="/admin/items/date" method="post">
                <input class="btn btn- mt-2 mb-4" type="date" id="date" name="date">
                <input class="btn btn- mt-2 mb-4" type="submit">
              </form>
        </div>

        <hr>

        <div class="container form-signin  mt-5 localbyme mainBox2">

            <h2 class=" mb-4 text-center mainBox2Heading1">
                Inventary On <%= date%></h2>

            <div id="accordion">
                <% itemsToday.forEach(element =>{ %>
                    <!-- Start of cart -->
                    <div class="card border-primary">
                        <div class="card-header " id="headingOne">
                            <h5 class="mb-0">
                                <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#div<%=element.itemId%>" aria-expanded="true" aria-controls="collapseOne">
                                    <%= element.name %>
                                </button>
                            </h5>
                        </div>

                        <div id="div<%=element.itemId%>" class="collapse s" aria-labelledby="headingOne" data-parent="#accordion">
                            <div class="card-body">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="itemid" placeholder="itemid" value="<%= element.itemId %>" name="itemid" required="" disabled>
                                    <label for="itemid">itemid</label>
                                </div>
                                <div class="form-floating mb-3">

                                    <input type="text" class="form-control" id="name<%= element.itemId %>" placeholder="Name" value="<%= element.name %>" name="name" required="">
                                    <label for="name">Name</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="price<%= element.itemId %>" placeholder="price" value="<%= element.price %>" name="price" required="">
                                    <label for="price">Price</label>
                                </div>

                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <label class="input-group-text" for="inputGroupSelect01">Available
                                        </label>
                                    </div>
                                    <select class="custom-select" id="available<%= element.itemId %>">
                                     
                                        <option value="<%= element.available %>" selected> <%= element.available %>
                                        </option>
                                        <option value="<%= !element.available %>" class="bg-red" ><%  element.available =="true" ? "false" : "true" %></option>44
                                     
                                    </select>
                                </div>

                                <div class="container">
                                    <h2>Menu</h2>
                                    <ul class="list-group" id="menu<%= element.itemId %>">
                                        <% element.menu.forEach(elementItem=>{%>
                                            <li class="list-group-item" style="display:flex; justify-content:space-between;">
                                                <div class=" m-1">
                                                    <input type="text" class="form-control menuItem<%= element.itemId %>" id="menu1" placeholder="menu1" value="<%=elementItem%>" name="itemid" required="">
                                                </div>
                                                <span>
                                                    <button class="btn btn-danger">Remove</button>
                                                </span>
                                            </li>
                                        <% }) %>
                                    </ul>

                                    <form method="post" action="/upload" enctype="multipart/form-data" class="my-2">
                                        <div class="mb-3">
                                          <input type="file" class="form-control" name="file">
                                          <input hidden type="text" value="<%= element.itemId %>" name="itemid">
                                          <input hidden type="text" value="<%= date%>" name="date">
                                        </div>
                                       
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                      </form>

                                    <div class="d-flex justify-content-between">
                                        <button class="btn btn-prim1 m-2" id="btn<%= element.itemId %>" onclick="onClickaddbtn(this.id)">Add New Item</button>
                                        <button class="btn btn-prim1 m-2" id="update<%=element.itemId%>" onclick="onClickUpdateMenu(this.id)">Update Menu On DB</button>
                                    </div>
                                </div>

                            </div>

                        </div>

                    </div>

                    <br>
                <% }) %>
            </div>
<hr>

        

                <div id="divnewItem" class="collapse show circular bg-prim mainBox3" aria-labelledby="headingOne" data-parent="#accordion">
                    <div class="container bg-prim circular text-white p-4 mt-4">
                        <h2 class="text-center">Add New Item To Inventary on <%= date %></h2>
                    </div>
                    <div class="card-body">
                       
                        <div class="form-floating mb-3">

                            <input type="text" class="form-control" id="namenewItem" placeholder="Name"  name="name" required="">
                            <label for="name">Name</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="pricenewItem" placeholder="price" value="" name="price" required="">
                            <label for="price">Price</label>
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputGroupSelect01">Available
                                </label>
                            </div>
                            <select class="custom-select" id="inputGroupSelect01">
                                <option>true
                                </option>
                                <option class="bg-red" value="">false</option>
                            </select>
                        </div>

                        <div class="container menu">
                            <h2 class="text-white">Menu</h2>
                            <ul class="list-group" id="menunewItem">
                               
                                    <li class="list-group-item" style="display:flex; justify-content:space-between;">
                                        <div class=" m-1">
                                            <input type="text" class="form-control menuItemnewItem" id="menu1" placeholder="menu1" value="" name="itemid" required="">
                                        </div>
                                        <span>
                                            <button class="btn btn-danger">Remove</button>
                                        </span>
                                    </li>
                            
                            </ul>

                            <div class="d-flex justify-content-between">
                                <button class="btn btn-prim1 m-2" id="btnnewItem" onclick="onClickaddbtn(this.id)">Add New Menu Item</button>
                            <button class="btn btn-prim1 m-2" id="btnnewItem" onclick="onClickAddItem(this.id)">Add Item to Database</button>
                            </div>

                        </div>

                    </div>

                </div>

        <script>
            // let array = ["Roti", "Sabji"]

const onClickaddbtn = (menuUlId) => {
  const id = menuUlId.substr(3);
  var list = document.createElement("li");
  list.className = "list-group-item";
  list.style.display = "flex";
  list.style.justifyContent = "space-between";

  var divInsideList = document.createElement("div");
  divInsideList.className = "m-1";

  var input = document.createElement("input");
  input.className = `form-control menuItem${id}`;
  input.value = "";
  input.placeholder = "Menu Item";

  divInsideList.appendChild(input);

  var spanBtns = document.createElement("span");
  var btn = document.createElement("button");
  btn.classList.add("btn", "btn-danger");

  btn.textContent = "Remove";
  spanBtns.append(btn);

  list.appendChild(divInsideList);
  list.appendChild(spanBtns);

  console.log(id);
  document.querySelector(`#menu${id}`).appendChild(list);
};

